{
  "name": "lightweight-ui",
  "version": "0.0.0",
  "main": "./dist/core/lightweight-ui.cjs.js",
  "module": "./dist/core/lightweight-ui.es.js",
  "unpkg": "./dist/core/lightweight-ui.umd.js",
  "typings": "./dist/core/types/index.d.ts",
  "jsdelivr": "./dist/core/lightweight-ui.umd.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/core/lightweight-ui.es.js",
      "require": "./dist/core/lightweight-ui.cjs.js",
      "types": "./dist/core/types/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/lightweight-ui.es.js",
      "require": "./dist/core/lightweight-ui.cjs.js",
      "types": "./dist/core/types/index.d.ts"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=14.19.3"
  },
  "scripts": {
    "lint": "prettier -c --parser typescript \"lib/*/{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "build:core": "vite build --config ./scripts/core/vite.build.config.ts && tsc --project ./scripts/core/tsconfig.declaration.json",
    "test:unit": "",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Efcolipt/lightweight-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Efcolipt/lightweight-ui/issues"
  },
  "homepage": "https://github.com/Efcolipt/lightweight-ui#readme",
  "author": "Baykov Ivan <efcolipt@gmail.com> (https://github.com/Efcolipt/)",
  "description": "Intuitive, type safe and flexible, super lightweight ui library for Vue/Nuxt",
  "copyright": "Copyright Â© 2023-present Efcolipt",
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@release-it/conventional-changelog": "^5.1.1",
    "deepmerge": "^4.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "release-it": "^15.11.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "last 2 versions",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}