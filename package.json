{
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/shared",
    "packages/ui/core"
  ],
  "engines": {
    "node": ">=14.19.3"
  },
  "scripts": {
    "code:fix": "prettier --parser=typescript --write ./packages/src/**/*.[jt]sx?",
    "prepare": "husky install",
    "prebuild": "yarn workspace @lightweight-ui/shared run build ",
    "build:core": "yarn prebuild && yarn workspace @lightweight-ui/core run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@release-it-plugins/workspaces": "^3.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "release-it": "^15.11.0"
  },
  "lint-staged": {
    "*.[jt]sx?": "npm run code:fix"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "npm": {
      "publish": false,
      "versionArgs": [
        "--allow-same-version",
        "--workspaces-update=false"
      ]
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "plugins": {
      "@release-it-plugins/workspaces": {
        "publish": false
      },
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
