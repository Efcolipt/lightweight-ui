{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=14.19.3"
  },
  "scripts": {
    "code:fix": "prettier --parser=typescript --write packages/*/{src,__tests__,e2e}/**/*.[jt]s?(x)",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@lightweight-ui/config": "workspace:*",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.[jt]s?(x)": "npm run code:fix"
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
