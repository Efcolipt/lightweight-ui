{
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/config/*",
    "packages/ui/*"
  ],
  "engines": {
    "node": ">=14.19.3"
  },
  "scripts": {
    "code:fix": "prettier --parser=typescript --write ./packages/src/**/*.[jt]sx?",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  },
  "lint-staged": {
    "*.[jt]sx?": "npm run code:fix"
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
