{
  "extends": "@lightweight-ui/shared/typescript-config/base",
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*"]
}
