{
  "name": "@lightweight-ui/core",
  "version": "0.0.0",
  "main": "./dist/index.es.js",
  "module": "./dist/index.es.js",
  "unpkg": "./dist/index.umd.js",
  "typings": "./dist/index.d.ts",
  "jsdelivr": "./dist/index.umd.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Efcolipt/lightweight-ui.git",
    "directory": "packages/ui/core"
  },
  "bugs": {
    "url": "https://github.com/Efcolipt/lightweight-ui/issues"
  },
  "homepage": "https://github.com/Efcolipt/lightweight-ui#readme",
  "author": "Baykov Ivan <efcolipt@gmail.com> (https://github.com/Efcolipt/)",
  "description": "Intuitive, type safe and flexible, super lightweight ui library for Vue/Nuxt/Svelte/React/Web",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    }
  },
  "devDependencies": {
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0"
  }
}
